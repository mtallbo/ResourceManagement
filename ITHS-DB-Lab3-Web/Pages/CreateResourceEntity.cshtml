@page
@model ITHS_DB_Lab3_Web.Pages.CreateResourceEntityModel
@{
    ViewData["Title"] = "CreateResourceEntity";
}

<h1>Create Resource Entity</h1>

@ViewData["Error"]

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ResourceEntityData.EntityId" class="control-label">Entity ID</label>
                <input asp-for="ResourceEntityData.EntityId" class="form-control" />
                <span asp-validation-for="ResourceEntityData.EntityId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ResourceEntityData.ResourceId" class="control-label"></label>
                <input asp-for="ResourceEntityData.ResourceId" class="form-control" />
                <span asp-validation-for="ResourceEntityData.Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ResourceEntityData.IdentificationNumber" class="control-label">Identification Number</label>
                <input asp-for="ResourceEntityData.IdentificationNumber" class="form-control" />
                <span asp-validation-for="ResourceEntityData.IdentificationNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>