@page
@model ITHS_DB_Lab3_Web.Pages.CreateCategoryModel
@{
    ViewData["Title"] = "CreateCategory";
}

<h1>Create Category</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Category.Category" class="control-label"></label>
                <input asp-for="Category.Category" class="form-control" />
                <span asp-validation-for="Category.Category" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Identification (Registration plate, IMEI, ISBN etc.)</label>
                <input asp-for="Category.Identification" class="form-control" />
                <span asp-validation-for="Category.Identification" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
            <span class="alert-warning">@TempData["Message"]</span>
        </form>
    </div>
</div>